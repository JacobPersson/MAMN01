<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ContentDescription"
    tools:context=".Compass">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff" >

        <TextView
            android:id="@+id/DegreeTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/compass_image"
            android:layout_below="@+id/compass_image"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@string/compass_heading"
            android:textColor="@color/teal_700"
            android:textSize="25sp"
            android:textStyle="normal|bold" />

        <ImageView
            android:id="@+id/compass_image"
            android:layout_width="match_parent"
            android:layout_height="631dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/compass_iconv2" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>